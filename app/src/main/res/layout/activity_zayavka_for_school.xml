<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".zayavka_for_school">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/purple_500"
        android:padding="16dp">
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:fontFamily="@font/montsbold"
            android:textSize="16sp"
            android:textColor="@color/purple"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/card_border"
                android:layout_margin="14dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ФИО:"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/usernameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Введите ваше ФИО"
                            android:inputType="text"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Номер группы:"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/passwordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="24dp"
                            android:hint="Введите номер группы" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Контактный номер телефона:"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/jh"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Введите номер телефона"
                            android:inputType="number"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ссылка на страницу VK:"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/pa"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="24dp"
                            android:hint="Введите ссылку на VK" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Аккаунт в Telegram:"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/u"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Введите ссылку на Tg" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Почему я решил стать куратором:"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/p"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="24dp"
                            android:hint="Развернутый ответ" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Мои положительные качества личности, которые помогут мне в роли куратора"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>
                        <EditText
                            android:id="@+id/pp"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="24dp"
                            android:hint="Развернутый ответ" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Мои негативные качества личности, которые могут помешать мне в роли куратора"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>
                        <EditText
                            android:id="@+id/ppp"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="24dp"
                            android:hint="Развернутый ответ" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Опыт в студенчестве"
                            android:textSize="20sp"
                            android:textColor="@color/purple_700"
                            android:fontFamily="@font/montsbold"
                            android:layout_marginBottom="8dp"/>
                        <EditText
                            android:id="@+id/pppq"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="#E8EAF6"
                            android:fontFamily="@font/montslight"
                            android:padding="8dp"
                            android:layout_marginBottom="24dp"
                            android:hint="Развернутый ответ" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/loginButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Отправить"
            android:fontFamily="@font/montsbold"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>