<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".add_activnost">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/purple_500"
        android:padding="16dp">
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:fontFamily="@font/montsbold"
            android:textSize="16sp"
            android:textColor="@color/purple"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="14dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/round_card"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montsbold"
                android:text="Новая активность"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/card_border">

            <TextView
                android:id="@+id/questionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название:"
                android:textSize="18sp"
                android:textColor="@color/purple"
                android:fontFamily="@font/montsbold"/>

            <EditText
                android:id="@+id/answerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ответ"
                android:textSize="16sp"
                android:background="#E8EAF6"
                android:fontFamily="@font/montslight"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата:"
                android:textSize="18sp"
                android:textColor="@color/purple"
                android:fontFamily="@font/montsbold"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/an"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ответ"
                android:textSize="16sp"
                android:background="#E8EAF6"
                android:fontFamily="@font/montslight"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/questionL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ФИО:"
                android:textSize="18sp"
                android:textColor="@color/purple"
                android:fontFamily="@font/montsbold"
                android:layout_marginTop="8dp"/>

            <!-- ListView занимает всё оставшееся пространство -->
            <ListView
                android:id="@+id/studentsListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:choiceMode="multipleChoice"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/addButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Добавить"
            android:fontFamily="@font/montsbold"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>