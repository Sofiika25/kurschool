<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".stud_menu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/purple_500"
        android:padding="16dp">
        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выход"
            android:fontFamily="@font/montsbold"
            android:textSize="16sp"
            android:textColor="#3C34C5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tv_useful_info"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montsbold"
                android:text="Полезная информация"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/img_useful_info_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/inf0" />
        </LinearLayout>

        <!-- Кнопка "Школа кураторов" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tv_curator_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Школа кураторов"
                android:textSize="20sp"
                android:fontFamily="@font/montsbold"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/img_curator_school_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/people" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>